@model CCTP_Manage.Models.ViewModel.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "Layout";
}

<!-- Contenedor principal -->
<div class="sesion-container">
    <div class="ISesion-card">
        <h2>Inicio de sesión</h2>

        <form action="~/Account/Login" method="post">

            <img src="~/images/isUsuario.png" alt="Img">
            <label for="email">Correo:</label>
            <input asp-for="Correo" type="email" id="email"  required>

            <label for="password">Contraseña:</label>
            <input asp-for="Contrasena" type="password" id="password"  required>

            <p><a href="@Url.Action("RecuperarContraseña", "Account")">¿Has olvidado tu contraseña?</a></p>

            @Html.ValidationSummary()

            <input type="submit" value="Iniciar Sesión"></>

            <p>¿Aún no tienes una cuenta? <a href="~/Account/SignUp" )">Regístrate aquí</a></p>
        </form>
    </div>
</div>

