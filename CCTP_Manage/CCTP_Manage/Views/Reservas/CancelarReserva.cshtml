@model CCTP_Manage.Models.Entities.Reservacione
@{
    Layout = "Layout";
}

<div class="modal-container">
    <div class="modal-content">
        <h2 class="modal-title">Cancelar Reserva</h2>
        <div class="modal-body">
            <p><strong>Detalles de la Reservación</strong></p>
            <p>Fecha: @Model.FechaReservacion</p>
            <p>Hora de inicio: @Model.HoraInicio</p>
            <p>Costo total: @Model.CostoTotal.ToString("C")</p>
            <p>Estado actual: @Model.Estado</p>

            <p><strong>Política de Cancelación</strong></p>
            <p>Las cancelaciones realizadas con al menos 5 días de anticipación recibirán un reembolso del 50% del anticipo.</p>
        </div>
        <div class="modal-footer">
            <form asp-action="ConfirmarCancelacion" asp-controller="Reservas" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <label class="checkbox-container">
                    <input type="checkbox" id="acceptTerms">
                    <span>Acepto los términos y condiciones</span>
                </label>
                <button id="btnPagar" class="btn-primary" disabled>Confirmar</button>
            </form>
            <button id="btnCancelar" class="btn-secondary" onclick="location.href='@Url.Action("PerfilView", "Account")'">Volver</button>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let checkbox = document.getElementById('acceptTerms');
        let btnPagar = document.getElementById('btnPagar');

        if (checkbox && btnPagar) {
            checkbox.addEventListener('change', function () {
                btnPagar.disabled = !this.checked;
            });
        }
    });
</script>



